#include <Servo.h>

int value; 
Servo myESC; 

void setup() {
  myESC.attach(9); // attached to pin 9 
  Serial.begin(9600); //serial begin baud rate at 9600
  value = 0;
}

void loop() {
  while(Serial.available() == 0);
    value = Serial.parseInt();
    value = map(value, -100, 100, 1000, 2000);
    myESC.writeMicroseconds(value);
    Serial.print(value);
    Serial.println("microseconds");
}
